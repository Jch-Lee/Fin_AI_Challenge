# 환경 변수 설정 예시
# 이 파일을 .env로 복사하여 실제 값을 설정하세요

# Model Configuration
MODEL_NAME=beomi/gemma-ko-7b
TEACHER_MODEL_NAME=meta-llama/Llama-3.1-70B-Instruct
STUDENT_MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.2

# Hardware Configuration  
DEVICE=cuda
MAX_MEMORY_GB=24
BATCH_SIZE=4

# Paths
DATA_DIR=./data
MODEL_DIR=./models
OUTPUT_DIR=./outputs
CHECKPOINT_DIR=./checkpoints

# Training Configuration
LEARNING_RATE=2e-5
NUM_EPOCHS=3
WARMUP_STEPS=500

# RAG Configuration
EMBEDDING_MODEL=nlpai-lab/KURE-v1
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=5

# Logging
WANDB_PROJECT=fin-ai-challenge
WANDB_API_KEY=your_wandb_api_key_here
LOG_LEVEL=INFO

# Performance
MAX_NEW_TOKENS=64
TEMPERATURE=0.3
TOP_P=0.8
NUM_WORKERS=4